<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title  ToDoApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body> 
    <header>
        <!--Header with navigation to all the pages-->
        <nav class="navbar navbar-default">
            <ul class="nav nav-pills">
                 <li>@Html.ActionLink("Home", "Index", "Home")</li>
                 <li>@Html.ActionLink("Done", "DoneTasks", "Task")</li>
                 <li>@Html.ActionLink("In progress", "InProgressTasks")</li>
                 <li>@Html.ActionLink("Not Done", "NotDoneTasks", "Task")</li>
                 <li>@Html.ActionLink("Statistics", "UserStatistics", "Task", new { id = 3 }, null)</li>
                 <li>@Html.ActionLink("Add New Task", "AddSubTask", "Task")</li>
            </ul>
        </nav>
    </header>
    @RenderBody()

    <footer>
        <!--Footer with contact information and email to contact support.-->
        <div>Contact Information:</div>
        <p>megan.m@gmail.com</p>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script src="~/site.js"></script>
</body>
</html>
